<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/messageitem_iv_headic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView

                android:id="@+id/messageitem_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逼`/成"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/messageitem_tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="该好友没有新动态"
                android:layout_margin="8dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/messageitem_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12：56"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/messageitem_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/skin_tips"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
